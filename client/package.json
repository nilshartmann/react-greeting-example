{
  "name": "react-greeting-example-client",
  "version": "1.0.0",
  "description": "React 16.3 example application with TypeScript",
  "main": "index.js",
  "author": "Nils Hartmann",
  "license": "MIT",
  "scripts": {
    "start": "yarn webserver:prod",
    "dist": "yarn dist:dev && yarn dist:step_01 && yarn dist:step_02 && yarn dist:step_03 && yarn dist:step_03a && yarn dist:step_04",
    "dist:dev": "rimraf public/dist && webpack",
    "dist:step_01": "rimraf public/dist-01 && webpack --mode production --output-path public/dist-prod-01",
    "dist:step_02": "rimraf public/dist-prod-02 && webpack --config webpack.config.prod.js",
    "dist:step_03": "rimraf public/dist-prod-03 && webpack --config webpack.config.prod-with-externals.js",
    "dist:step_03a": "rimraf public/dist-prod-03-vendor && webpack --config webpack.config.prod-with-vendor.js",
    "dist:step_04": "rimraf public/dist-prod-04 && webpack --config webpack.config.prod-with-hashes.js",
    "prettier": "prettier --write \"src/**/*.{js,jsx,ts,tsx}\"",
    "webserver": "ws --directory public/ --spa index.html",
    "webserver:prod": "ws --directory public/ --spa index-with-externals.html",
    "webserver:vendor": "ws --directory public/ --spa index-with-vendor.html",
    "webserver:hashes": "ws --directory public/ --spa index-with-hashes.html"
  },
  "dependencies": {
    "@types/d3": "^5.0.0",
    "@types/nvd3": "^1.8.38",
    "@types/react": "^16.3.10",
    "@types/react-dom": "^16.0.5",
    "@types/react-loadable": "^5.3.4",
    "@types/react-router-dom": "^4.2.6",
    "d3": "3.5",
    "es6-promise": "^4.2.4",
    "nvd3": "^1.8.6",
    "react": "^16.3.1",
    "react-dom": "^16.3.1",
    "react-loadable": "^5.3.1",
    "react-router-dom": "^4.2.2"
  },
  "devDependencies": {
    "awesome-typescript-loader": "^5.0.0",
    "html-webpack-plugin": "^3.2.0",
    "local-web-server": "^2.5.1",
    "prettier": "^1.12.0",
    "rimraf": "^2.6.2",
    "source-map-loader": "^0.2.3",
    "typescript": "^2.8.1",
    "webpack": "^4.5.0",
    "webpack-cli": "^2.0.14",
    "webpack-dev-server": "^3.1.3"
  }
}
